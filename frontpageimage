package View;

import java.awt.Graphics;
import java.awt.Image;
import java.io.File;
import java.io.IOException;
import javax.imageio.ImageIO;
import javax.swing.JPanel;

public class frontpageimage extends JPanel {
	public void paintComponent(Graphics g){ // mettre une image
		try{
		Image fond = ImageIO.read(new File("naheulbeuk.jpg"));
		g.drawImage(fond, 0, 0,this.getWidth(), this.getHeight(), this); //met l'image tout en haut a gauche avec la meme taille que le cadre
	}catch(IOException e){
		e.printStackTrace(); 
	}
	}
}
